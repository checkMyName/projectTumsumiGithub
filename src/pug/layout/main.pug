block mainVariables

doctype html
html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(http-equiv='x-ua-compatible' content="ie=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content="Description of the page less than 150 characters")
		title #{pageTitle}
		link(rel="stylesheet" href="css/libs.css")
		link(rel="stylesheet" href="css/common.css")
	body

		include ../mixins/icon
		include ../mixins/breadcrumbs
		include ../mixins/title
		include ../mixins/button
		include ../mixins/field
		include ../mixins/lazyImage
		include ../mixins/tabs
		include ../mixins/switch
		include ../mixins/item
		include ../mixins/specItem

		div(
			class=[
				'page',
				pageRootClass && `page--${pageRootClass}`
			]
			id=pageId || 'js-page-regular'
			data-sprite-path='img/'
		)
			div(class='page__wrapper' id='js-page-wrapper')
				div(class='page__content')
					include ../components/header
					main
						block mainContent
				include ../components/footer
		include ../components/modal/imagezoom
		include ../components/modal/phoneCheckModal
		include ../components/modal/emailCheckModal
		include ../components/modal/successModal
		include ../components/modal/worksheetModal
		include ../components/modal/taxModal
		include ../components/menu

		script(src='js/vendors.js')
		script(src="https://api-maps.yandex.ru/2.1/?apikey=bc96f080-2bdc-4019-99ed-b8cc334d988c&lang=ru_RU" type="text/javascript")
		script(src='js/main.js')