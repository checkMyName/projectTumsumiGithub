  .container
    .services__header
      +title({
        tag: 'h3',
        type: 'medium',
        content: 'Услуги',
        classes: 'label',
      })
      .row.justify-content-between.align-items-center
        .col-12.col-md-auto
          +tabs([
            {
              place: 'services',
              name: 'Клиника',
              checked: true,
            },
            {
              place: 'services',
              name: 'Стоматология',
            },
          ])
        .col-12.col-md-auto
          +switch()
    .services__content
      .row.g-lg-4
        each item in servicesItems
          .col-12.col-lg-4
            +item({
              href: item.href,
              imgUrl: item.imgUrl,
              title: item.title,
              subtitle: item.subtitle,
            })
    .row.justify-content-center
      .col-12.col-lg-auto
        +button({
          tag: 'a',
          link: {href: 'services.html'},
          type: 'outline',
          content: 'Все услуги',
          classes: 'd-block d-inline-lg-block text-center mx-auto button-outline--black services__content-button',
        })