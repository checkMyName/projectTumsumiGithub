  .articles.bg-light
    .container
      .articles__content
        +title({
          tag: 'h3',
          type: 'medium',
          content: 'Полезные статьи',
          classes: 'mb-0 articles__title',
        })
        .row.gy-5.g-lg-4
          each item in articlesItem
            .col-12.col-md-6.col-lg-4
              a(href="#" class="articles__item")
