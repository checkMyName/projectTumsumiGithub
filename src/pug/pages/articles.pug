                  +lazyImage({
                    imageSrc: item.imageUrl,
                    type: 'img',
                    classes: '',
                    imageClasses: '',
                  })
                  if item.isVideo
                    .text-white.articles__item-img-label
                      +icon('video')
                      span.ms-1.text-small Видео
                .articles__item-block
                  p.mb-0.text-big.text-500.articles__item-title #{item.title}
                  p.text-dark.text-normal.articles__item-text #{item.name}
                p.text-small.text-uppercase.text-secondary #{item.date}
