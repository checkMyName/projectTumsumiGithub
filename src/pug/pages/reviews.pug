    },
  ])
  .qanda
    .container
      +title({
        tag: 'h3',
        type: 'medium',
        content: 'Отзывы <span class="text-secondary">41</span>',
        classes: 'mb-0',
      })
    .qanda__content
      each item in qandaItems
        .qanda__content-part
          .container
            .qanda__content-item
              input(type="checkbox" name="item-checkbox")
              .qanda__content-item-wrapper
                .qanda__content-item-text
                  p.text-big.text-500 #{item.question}
                  p.text-uppercase.text-secondary 16.08.2022
                  .hidden-text
                    .d-flex.align-items-center
                      +icon('tmy', '', '28px', '28px')
                      span.ms-2.text-uppercase.text-normal.text-500 ТМУ
                    p.mt-2.mb-0.text-dark.text-normal #{item.answer}
                .qanda__content-item-plus
                  +icon('plus', 'plus')
                  +icon('minus', 'minus')
    .container
      .d-flex.justify-content-center.mt-5.pagination
        button(type='button' class="button button-arrow mr-middle")
          +icon('arrow-left', 'icon')
        .row.gx-1
          .col-auto
            button(type='button' class="button button-pagination current")
              span 1
          .col-auto
            button(type='button' class="button button-pagination")
              span 2
          .col-auto
            button(type='button' class="button button-pagination")
              span 3
          .col-auto
            button(type='button' class="button button-pagination")
              span 4
          .col-auto
            button(type='button' class="button button-pagination")
              span 5
        button(type='button' class="button button-arrow button-arrow--reverse ml-middle")
          +icon('arrow-left', 'icon')
    .form__wrapper
      .container
        .row
          .col-12.col-lg-6.mx-auto
            +title({
              tag: 'h4',
              type: 'medium',
              content: 'Оставить отзыв',
              classes: 'form__title',
            })
            p.form__subtitle Чтобы оставить отзыв, вам надо будет подтвердить номер телефона/почту
            form(class=['js-form-validate js-switch-inputs'])
              +tabs([
                {
                  place: 'qanda',
                  name: 'По телефону',
                  value: 'phone',
                  classes: 'js-slide',
                  checked: true,
                },
                {
                  place: 'qanda',
                  value: 'email',
                  classes: 'js-slide',
                  name: 'По почте',
                },
              ])
              .row.gx-3
                .col-12.col-md-6
                  +field({
                    type: 'text',
                    placeholder: 'Ваше имя',
                    classes: 'p-3',
                    validate: true
                  })
                .col-12.col-md-6.js-input-phone
                  +field({
                    type: 'phone',
                    placeholder: 'Телефон',
                    classes: 'p-3 js-phone-mask',
                    validate: true,
                    validateLength: 18
                  })
                .col-12.col-md-6.is-hidden.js-input-email
                  +field({
                    type: 'email',
                    placeholder: 'Почта',
                    classes: 'p-3',
                    validate: true,
                  })
                .col-12
                  +field({
                    type: 'textarea',
                    placeholder: 'Ваш вопрос',
                    classes: 'p-3',
                    validate: true,
                  })
              .row.align-items-center
                .col-12.col-lg
                  .form__agreement
                    .form__agreement-checkbox
                      label
                        input(type="checkbox" name="agreement")
                        span
                    span.text-dark Согласен с #[a(href="#" class="text-danger text-decoration-underline") правилами] обработки персональных данных*
                .col-12.col-lg-auto
                  +button({
                    buttonType: 'submit',
                    type: 'default',
                    content: 'Оставить отзыв',
                    classes: 'w-100 button button-red form__button'
                  })
